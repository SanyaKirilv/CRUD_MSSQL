@model Server_v0._0.Transaction

@{
    ViewData["Title"] = "Удалить запись";
}

<h1>Удалить запись</h1>

<h3>Вы уверены что хотите удалить эту запись?</h3>
<div>
    <h4>Транзакия</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Worker)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Worker.WorkerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Work)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Work.WorkID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkType.Name)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="TransactionID" />
        <input type="submit" value=" Удалить запись " class="btn btn-danger"  class="btn btn-danger" />
    </form>
    <div>
        <div class="border-top my-3"></div>
        <a class="form-group" asp-action="Index">
            <input type="submit" value="Вернуться назад" class="btn btn-outline-secondary" />
        </a>
    </div>
</div>
