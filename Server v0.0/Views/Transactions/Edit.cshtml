@model Server_v0._0.Transaction

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать</h1>

<h4>Транзакция</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionID" />
            <div class="form-group">
                <label asp-for="WorkerID" class="control-label"></label>
                <select asp-for="WorkerID" class="form-control" asp-items="ViewBag.WorkerID"></select>
                <span asp-validation-for="WorkerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkID" class="control-label"></label>
                <select asp-for="WorkID" class="form-control" asp-items="ViewBag.WorkID"></select>
                <span asp-validation-for="WorkID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkTypeID" class="control-label"></label>
                <select asp-for="WorkTypeID" class="form-control" asp-items="ViewBag.WorkTypeID"></select>
                <span asp-validation-for="WorkTypeID" class="text-danger"></span>
            </div>
            <a class="form-group" asp-action="Create">
                <input type="submit" value="Изменить запись" class="btn btn-outline-success" />
            </a>
        </form>

        <div>
            <div class="border-top my-3"></div>
            <a class="form-group" asp-action="Index">
                <input type="submit" value="Вернуться назад " class="btn btn-outline-secondary" />
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
