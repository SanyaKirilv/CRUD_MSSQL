@model IEnumerable<Server_v0._0.Models.WorkType>

@{
    ViewData["Title"] = "Типы работ";
}

<h1>Типы работ</h1>

<p>
    <a class="form-group" asp-action="Create">
        <input type="submit" value="Добавить запись" class="btn btn-outline-success" />
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pay)
            </td>
            <td>
                <a class="form-group" asp-action="Edit" asp-route-id="@item.WorkTypeID">
                    <input type="submit" value="Изменить" class="btn btn-outline-success" />
                </a>
                <a class="form-group" asp-action="Details" asp-route-id="@item.WorkTypeID">
                    <input type="submit" value="Информация" class="btn btn-outline-secondary" />
                </a>
                <a class="form-group" asp-action="Delete" asp-route-id="@item.WorkTypeID">
                    <input type="submit" value="Удалить" class="btn btn-outline-danger" />
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
