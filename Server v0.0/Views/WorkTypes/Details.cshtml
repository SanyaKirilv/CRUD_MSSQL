@model Server_v0._0.Models.WorkType

@{
    ViewData["Title"] = "Информация";
}

<h1>Информация</h1>

<div>
    <h4>Тип работы</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pay)
        </dd>
    </dl>
</div>
<div>
    <a class="form-group" asp-action="Edit" asp-route-id="@Model.WorkTypeID">
        <input type="submit" value=" Изменить запись " class="btn btn-outline-success" />
    </a>
    <div>
        <div class="border-top my-3"></div>
        <a class="form-group" asp-action="Index">
            <input type="submit" value="Вернуться назад" class="btn btn-outline-secondary" />
        </a>
    </div>
</div>
